<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'
xmlns:p1="urn:import:com.google.gwt.user.datepicker.client"
xmlns:agwt="urn:import:org.gwt.advanced.client.ui.widget">
	<ui:style type="com.google.code.guidatv.client.ui.ScheduleWidget.ScheduleWidgetStyle">
		.panel {
			background-color: ivory;
			width: 100%;
			height: 100%;
		}
		.oddrow {
			background-color: white;
		}
		.evenrow {
			background-color: #ccccff;
		}
	</ui:style>

	<g:FlowPanel styleName="{style.panel}">
		<g:DockLayoutPanel unit="EM" width="100%" height="100%">
			<g:west size="12.5">
				<g:FlowPanel>
					<p1:DateBox ui:field="dateBox"/>
				</g:FlowPanel>
			</g:west>
			<g:center size="7.7">
				<!-- <g:ScrollPanel> -->
                    <agwt:SimpleGrid width="100%" ui:field="scheduleTable"/>
                    <!-- <g:FlexTable  /> -->
                <!-- </g:ScrollPanel> -->
			</g:center>
		</g:DockLayoutPanel>
	</g:FlowPanel>
</ui:UiBinder>
